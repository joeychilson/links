package signup

import (
	"github.com/joeychilson/links/pages/layout"
)

type PageProps struct {
	Error     string
	FormProps FormProps
}

templ Page(props PageProps) {
	@layout.Layout(layout.Props{Title: "Sign Up"}) {
		<div class="flex-1 flex flex-col items-center justify-center">
			if props.Error != "" {
				<div class="max-w-md w-full bg-white border border-red-500 rounded-lg shadow-md p-4 mb-6">
					<p class="text-red-500 text-center">{ props.Error }</p>
				</div>
			}
			<div class="max-w-md w-full bg-white border border-gray-200 rounded-lg shadow-md p-8">
				<h2 class="text-2xl font-semibold text-center text-gray-800 mb-6">Sign Up</h2>
				@Form(props.FormProps)
			</div>
		</div>
	}
}
